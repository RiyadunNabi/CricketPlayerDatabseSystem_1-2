      <Button layoutX="310.0" layoutY="149.0" mnemonicParsing="false" onAction="#onSearchByName" prefHeight="40.0" prefWidth="180.0" text="By Player Name" AnchorPane.bottomAnchor="410.0" AnchorPane.leftAnchor="310.0" AnchorPane.topAnchor="150.0" />

